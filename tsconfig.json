{
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"baseUrl": ".",
		"module": "esnext",
		"target": "es5",
		"lib": ["es6", "dom"],
		"sourceMap": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": ".",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"importHelpers": true,
		"strictNullChecks": true,
		// "allowSyntheticDefaultImports": true,
		// 这里为了解决jest的问题所以有了下面这行,注释了上面那行
		"esModuleInterop": true,
		"noUnusedLocals": true
	},
	"include": ["lib/**/*", "test/__mocks__"],
	"exclude": [
		"node_modules",
		"build",
		"dist",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts",
		"*.ts"
	]
}
